{% extends 'base.html.twig' %}

{% block title %}Sondage index{% endblock %}

{% block body %}
    <h1>Sondage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>Publique</th>
                <th>Date_fin</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sondage in sondages %}
            <tr>
                <td>{{ sondage.id }}</td>
                <td>{{ sondage.titre }}</td>
                <td>{{ sondage.description }}</td>
                <td>{{ sondage.image }}</td>
                <td>{{ sondage.publique ? 'Yes' : 'No' }}</td>
                <td>{{ sondage.dateFin ? sondage.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sondage.createdAt ? sondage.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_sondage_show', {'id': sondage.id}) }}">show</a>
                    <a href="{{ path('app_sondage_edit', {'id': sondage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sondage_new') }}">Create new</a>
{% endblock %}
