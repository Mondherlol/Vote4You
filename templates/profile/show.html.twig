{% extends '/profile/index.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    {% block spinner %}
        {{ parent() }}
    {% endblock %}

    {% block sidebar %}
        {{ parent() }}
    {% endblock %}

    {% block content %}
        <div class="container mt-5">
            {% block navbar %}
                {{ parent() }}
            {% endblock %}

            <h1 class="text-center text-primary mb-4">Profil de l'Utilisateur</h1>

            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="card shadow-lg">
                        <div class="card-body text-center">
                            {% if user.profilePic %}
                                <img src="{{ asset(user.profilePic) }}" alt="Photo de profil" class="img-fluid rounded-circle shadow-sm" style="max-width: 150px;">
                            {% else %}
                                <div class="bg-light rounded-circle d-flex justify-content-center align-items-center" style="width: 150px; height: 150px;">
                                    <span class="text-muted">Pas d'image</span>
                                </div>
                            {% endif %}
                            <h5 class="mt-3">{{ user.username }}</h5>
                            <p class="text-muted">{{ user.email }}</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 mb-4">
                    <div class="card shadow-lg">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Détails du Profil</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover">
                                <tbody>
                                <tr>
                                    <th>Nom d'utilisateur</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Date de création</th>
                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : 'Non disponible' }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_profile_edit', {'id': user.id}) }}" class="btn btn-warning btn-lg">Éditer le Profil</a>
            </div>
        </div>
    {% endblock %}
{% endblock %}
