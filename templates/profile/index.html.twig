<body>
{% block body %}
    <div class="container-xxl position-relative bg-white d-flex p-0">
        {% block spinner %}
            <!-- Spinner Start -->
            <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <!-- Spinner End -->
        {% endblock %}

        {% block sidebar %}
            <!-- Sidebar Start -->
            <div class="sidebar pe-4 pb-3">
                <nav class="navbar bg-light navbar-light">
                    <a href="index.html" class="navbar-brand mx-4 mb-3">
                        <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>Profile</h3>
                    </a>
                    <div class="d-flex align-items-center ms-4 mb-4">
                        <div class="position-relative">
                            <img class="rounded-circle" src="{{ asset('assets/img/user.jpg') }}" alt="" style="width: 40px; height: 40px;">
                            <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">{{ user.username }}</h6>
                            <span>User</span>
                        </div>
                    </div>
                    <div class="navbar-nav w-100">
                        <a href="{{ path('app_profile_index',{'id':app.user.id }) }}" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                        <a href="{{ path('app_profile_show',{'id':app.user.id }) }}" class="nav-item nav-link "><i class="fa fa-user me-2"></i>Mes Informations</a>

                        <a href="{{ path('app_profile_sondages',{'id':app.user.id }) }}" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Sondages</a>
                        <!--<a href="{{ path('app_theme_index') }}" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Themes</a>
                        <a href="{{ path('app_user_index') }}" class="nav-item nav-link"><i class="fa fa-user me-2"></i>Utilisateurs</a>
                        <a href="{{ path('app_signalement_index') }}" class="nav-item nav-link"><i class="fa fa-exclamation-circle me-2"></i>Signalements</a>
                        -->

                    </div>
                </nav>
            </div>
            <!-- Sidebar End -->
        {% endblock %}

        {% block content %}
            <!-- Content Start -->
            <div class="content">
                {% block navbar %}
                    <!-- Navbar Start -->
                    <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                        <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                            <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                        </a>


                        <div class="navbar-nav align-items-center ms-auto">
                            <a href="{{ path('home' )}}" class="nav-item nav-link "><i class="fa fa-home me-2"></i>Acueil</a>
                            <a href="{{ path('app_logout') }}" class="nav-item nav-link" ><i class="fa fa-user me-2"></i>Logout</a>



                        </div>
                    </nav>
                    <!-- Navbar End -->
                {% endblock %}

                <div class="container-fluid pt-4 px-4">
                    <div class="row g-4">

                        <!-- Card 2: Sondages Public -->
                        <div class="col-sm-6 col-xl-3">
                            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                <i class="fa fa-globe fa-3x text-success"></i> <!-- Icône modifiée pour "Public" -->
                                <div class="ms-3">
                                    <p class="mb-2">Sondages Public</p>
                                    <h6 class="mb-0">{{ publicSondages }}</h6>
                                </div>
                            </div>
                        </div>

                        <!-- Card 3: Sondages Privé -->
                        <div class="col-sm-6 col-xl-3">
                            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                <i class="fa fa-lock fa-3x text-warning"></i> <!-- Icône modifiée pour "Privé" -->
                                <div class="ms-3">
                                    <p class="mb-2">Sondages Privé</p>
                                    <h6 class="mb-0">{{ privateSondages }}</h6>
                                </div>
                            </div>
                        </div>

                        <!-- Card 1: Total Signalements -->
                        <div class="col-sm-6 col-xl-3">
                            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                <i class="fa fa-flag fa-3x text-danger"></i> <!-- Icône modifiée pour "Signalements" -->
                                <div class="ms-3">
                                    <p class="mb-2">Signalements</p>
                                    <h6 class="mb-0">{{ totalSignalements }}</h6>
                                </div>
                            </div>
                        </div>

                        <!-- Card 4: Total Commentaires -->
                        <div class="col-sm-6 col-xl-3">
                            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                <i class="fa fa-comment fa-3x text-primary"></i> <!-- Icône modifiée pour "Commentaires" -->
                                <div class="ms-3">
                                    <p class="mb-2">Commentaires</p>
                                    <h6 class="mb-0">{{ totalCommentaires }}</h6>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Section des graphiques -->
                    <div class="row mt-4">
                        <!-- Card pour la chart des sondages par mois --><div class="col-sm-12 col-xl-6">
                            <div class="bg-light text-center rounded p-4">
                                <h6 class="mb-4">Sondages par Mois</h6>
                                <canvas id="sondagesChart"></canvas>

                                <!-- Passer les données depuis Twig vers JavaScript -->
                                <script>
                                    // Récupérer les données JSON passées depuis le contrôleur
                                    const sondageParMois = {{ sondageParMois|json_encode|raw }};
                                    const labelsSondageParMois = Object.keys(sondageParMois);  // Extraire les mois
                                    const dataValuesSondageParMois = Object.values(sondageParMois);  // Extraire les valeurs (nombre de sondages)

                                </script>
                            </div>
                        </div>


                        <!-- Graphique 2: Activité des sondages -->
                        <div class="col-sm-12 col-xl-6">
                            <div class="bg-light text-center rounded p-4">
                                <h6 class="mb-4">Activité des sondages</h6>
                                <canvas id="activityChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
            <!-- Content End -->
        {% endblock %}


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

{% endblock %}

