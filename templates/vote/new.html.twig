{% extends 'base.html.twig' %}

{% block title %}Vote pour {{ sondage.titre }}{% endblock %}

{% block body %}
    <h1>{{ sondage.titre }}</h1>
    <p>{{ sondage.description }}</p>

    <form method="POST" action="{{ path('submit_vote', { id: sondage.id }) }}">
        <h3>Choisissez vos options :</h3>
        {% for choice in choices %}
            <div>
                <input type="checkbox" name="choices[]" value="{{ choice.id }}" id="choice_{{ choice.id }}">
                <label for="choice_{{ choice.id }}">{{ choice.titre }}</label>
            </div>
        {% endfor %}

        <h3>Choisissez un utilisateur</h3>
        <select name="user_id" required>
            {% for user in users %}
                <option value="{{ user.id }}">{{ user.pseudo }}</option>
            {% endfor %}
        </select>

        <button type="submit">Voter</button>
    </form>
{% endblock %}
